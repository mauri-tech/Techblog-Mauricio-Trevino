<section placeholder="blogposts" class="my-4">
  <div class="card mx-5">
    <div class="card-header d-flex justify-content-between pb-0 bg-dark-subtle">
      <h5>{{blog_title}}</h5>
      <div class="justify-content-between pb-2">
        <figcaption class="blockquote-header text-primary fw-light">Posted By: {{user.name}}</figcaption>
        <figcaption class="blockquote-header text-primary fw-light">Date: {{format_date createdAt}}</figcaption>
      </div>
    </div>
    <div class="card-body">
      <p class="card-text">{{description}}</p>
      <div class="container">
        <div class="row align-self-center justify-content-around">
          <div placeholder="buttonViewComment" class="d-flex">
            <div class="col">
              <a class="card-link" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCommentHome" aria-expanded="false" aria-controls="collapseCommentHome">View comments</a>
            </div>
            {{#if loggedIn}}
            <div class="col">
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Comment</button>
            </div>
            {{/if}}
            <div class="col">
              <a href="/user-posts/{{user.id}}" class="card-link">See more posts from this author</a>
            </div>
          </div>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add new comment</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form>
                  <div class="mb-3">
                    <label for="message-text" class="col-form-label">Comment:</label>
                    <textarea class="form-control" id="message-text" placeholder="Add a comment that contributes to the community"></textarea>
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="postCommentBtn" type="button" class="btn btn-primary">Post</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="collapse my-2" id="collapseCommentHome">
        <p class="form-control" id="exampleFormControlTextarea1" rows="3">{{comment_text}}</p>
      </div>
    </div>
  </div>
</section>
